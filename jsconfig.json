{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "jsx": "react",
    "paths": {
      "hooks/*": ["hooks/*"],
      "components/*": ["components/*"],
      "assets/*": ["assets/*"],
      "utils/*": ["utils/*"],
      "pages/*": ["pages/*"],
      "config/*": ["config/*"],
      "api/*": ["api/*"]
    }
  },
  "exclude": ["node_modules", "build"],
  "include": ["src"]
}
