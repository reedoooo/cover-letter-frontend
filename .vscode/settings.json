  "cSpell.words": [
    "apexcharts",
    "apos",
    "appbar",
    "autofocus",
    "bgcolor",
    "CHAKRA",
    "depcheckrc",
    "doesn",
    "Formik",
    "Fshape",
    "haspopup",
